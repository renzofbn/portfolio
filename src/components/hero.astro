---
import "../styles/global.css";
const tags = ["<h1>", "</h1>", "Experience"];
---

<main>
  <div class="tracker"></div>
  <div class="glow-container">
    <div class="ball"></div>
    <div class="ball" style="--delay:-12s;--size:0.35;--speed:15s;"></div>
    <div class="ball" style="--delay:-10s;--size:0.3;--speed:9s;"></div>
  </div>
  <section
    class="showcase 2xl:px-26 px-8 md:px-16 flex flex-col justify-center h-screen xl:px-20"
  >
    <div class="">
      <p class="text-sm md:text-xl italic">Hello world, I am ...</p>
      <h1
        class="text-gray-50 font-bold 2xl:text-9xl text-4xl md:text-7xl xl:text-8xl
      monomakh-regular duration-150 first:pl-0 last:pr-0 drop-shadow-[0px_0px_10px_#666666]"
      >
        Renzo Valentin
      </h1>
    </div>

    <div class="2xl:my-8 space-y-8 my-4 md:my-6">
      <p
        class="text-gray-350 font-normal 2xl:max-w-2xl xl:max-w-xl 2xl:text-xl text-sm md:text-lg"
      >
        A <span class="font-extrabold text-gray-50"
          >full-stack web developer</span
        > with +2 years of experience in building high-performance enterprise software
        tailored to business needs. Specializing in AI-powered applications, I create
        practical solutions for real-world challenges.
      </p>
      <p
        class="text-gray-400 font-medium 2xl:max-w-2xl xl:max-w-xl 2xl:text-lg text-sm md:text-lg"
      >
        I have a deep curiosity for how things work, which drives me to
        constantly explore and improve. More than just writing code, I focus on
        solving complex problems and creating meaningful solutions that make an
        impact.
      </p>
    </div>
    <div
      class="flex font-extrabold 2xl:text-4xl xl:text-2xl text-lg 2xl:gap-8 xl:gap-6 2xl:mt-20 mt-8 gap-4"
    >
      <a
        href="/blog"
        class="monomakh-regular underline duration-150 first:pl-0 last:pr-0 hover:scale-110 hover:drop-shadow-[0px_0px_10px_#E05E58]"
        aria-label="View Renzo Valentin's Blog"
      >
        Blog
      </a>
      <a
        href="/projects"
        class="monomakh-regular underline duration-150 first:pl-0 last:pr-0 hover:scale-110 hover:drop-shadow-[0px_0px_10px_#E05E58]"
        aria-label="View Renzo Valentin's Projects"
      >
        Projects
      </a>
      <a
        href="/Experience"
        class="monomakh-regular underline duration-150 first:pl-0 last:pr-0 hover:scale-110 hover:drop-shadow-[0px_0px_10px_#E05E58]"
        aria-label="View Renzo Valentin's Work Experience"
      >
        Experience
      </a>
    </div>
    <div class="flex flex-col mt-8">
      <p class="text-gray-300 text-sm font-light mb-2 italic">
        You can find me on:
      </p>
      <div class="flex gap-4">
        <a
          href="https://www.linkedin.com/in/renzofbn/"
          target="_blank"
          aria-label="View Renzo Valentin's LinkedIn"
          class="duration-150 first:pl-0 last:pr-0 hover:scale-110 hover:drop-shadow-[0px_0px_10px_#E05E58]"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            class="w-12 h-12"
            ><path
              fill="currentColor"
              d="M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2zm-.5 15.5v-5.3a3.26 3.26 0 0 0-3.26-3.26c-.85 0-1.84.52-2.32 1.3v-1.11h-2.79v8.37h2.79v-4.93c0-.77.62-1.4 1.39-1.4a1.4 1.4 0 0 1 1.4 1.4v4.93zM6.88 8.56a1.68 1.68 0 0 0 1.68-1.68c0-.93-.75-1.69-1.68-1.69a1.69 1.69 0 0 0-1.69 1.69c0 .93.76 1.68 1.69 1.68m1.39 9.94v-8.37H5.5v8.37z"
            ></path></svg
          >
        </a>
        <a
          href="https://github.com/renzofbn"
          target="_blank"
          class="duration-150 first:pl-0 last:pr-0 hover:scale-110 hover:drop-shadow-[0px_0px_10px_#E05E58]"
          aria-label="View Renzo Valentin's GitHub"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-12 h-12"
            viewBox="0 0 24 24"
            ><path
              fill="currentColor"
              d="M12 2.247a10 10 0 0 0-3.162 19.487c.5.088.687-.212.687-.475c0-.237-.012-1.025-.012-1.862c-2.513.462-3.163-.613-3.363-1.175a3.64 3.64 0 0 0-1.025-1.413c-.35-.187-.85-.65-.013-.662a2 2 0 0 1 1.538 1.025a2.137 2.137 0 0 0 2.912.825a2.1 2.1 0 0 1 .638-1.338c-2.225-.25-4.55-1.112-4.55-4.937a3.9 3.9 0 0 1 1.025-2.688a3.6 3.6 0 0 1 .1-2.65s.837-.262 2.75 1.025a9.43 9.43 0 0 1 5 0c1.912-1.3 2.75-1.025 2.75-1.025a3.6 3.6 0 0 1 .1 2.65a3.87 3.87 0 0 1 1.025 2.688c0 3.837-2.338 4.687-4.562 4.937a2.37 2.37 0 0 1 .674 1.85c0 1.338-.012 2.413-.012 2.75c0 .263.187.575.687.475A10.005 10.005 0 0 0 12 2.247"
            ></path></svg
          >
        </a>
        <a
          href="mailto:renzofbn@tutanota.com"
          target="_blank"
          class="duration-150 first:pl-0 last:pr-0 hover:scale-110 hover:drop-shadow-[0px_0px_10px_#E05E58]"
          aria-label="View Renzo Valentin's Projects"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-12 h-12"
            viewBox="0 0 24 24"
            ><path
              fill="currentColor"
              d="M12 15c.81 0 1.5-.3 2.11-.89c.59-.61.89-1.3.89-2.11s-.3-1.5-.89-2.11C13.5 9.3 12.81 9 12 9s-1.5.3-2.11.89C9.3 10.5 9 11.19 9 12s.3 1.5.89 2.11c.61.59 1.3.89 2.11.89m0-13c2.75 0 5.1 1 7.05 2.95S22 9.25 22 12v1.45c0 1-.35 1.85-1 2.55c-.7.67-1.5 1-2.5 1c-1.2 0-2.19-.5-2.94-1.5c-1 1-2.18 1.5-3.56 1.5c-1.37 0-2.55-.5-3.54-1.46C7.5 14.55 7 13.38 7 12c0-1.37.5-2.55 1.46-3.54C9.45 7.5 10.63 7 12 7c1.38 0 2.55.5 3.54 1.46C16.5 9.45 17 10.63 17 12v1.45c0 .41.16.77.46 1.08s.65.47 1.04.47c.42 0 .77-.16 1.07-.47s.43-.67.43-1.08V12c0-2.19-.77-4.07-2.35-5.65S14.19 4 12 4s-4.07.77-5.65 2.35S4 9.81 4 12s.77 4.07 2.35 5.65S9.81 20 12 20h5v2h-5c-2.75 0-5.1-1-7.05-2.95S2 14.75 2 12s1-5.1 2.95-7.05S9.25 2 12 2"
            ></path></svg
          >
        </a>
      </div>
    </div>
  </section>
</main>

<script>
  const moveElements = (e: any) => {
    const tracker = document.querySelector(".tracker") as HTMLElement;

    tracker.style.top = `${e.clientY}px`;
    tracker.style.left = `${e.clientX}px`;
    tracker.style.opacity = "1";
  };

  document.addEventListener("mousemove", moveElements);
</script>
