---
import Badge from "../components/badge.astro";
import GoBack from "../components/goBack.astro";
import Layout from "../layouts/Layout.astro";
import Footer from "./footer.astro";

const { n_repo } = Astro.props;
---

<Layout title="Projects | renzofbn">
  <div class="tracker"></div>
  <div class="flex justify-center">
    <div
      class="container max-w-4xl text-left px-6 md:px-24 mt-6 lg:mt-10 2xl:mt-16"
    >
      <GoBack url="/" text="Home" />
      <div class="mt-8 border-b-2 border-neutral-800 pb-8">
        <h1
          class="text-5xl md:text-6xl mt-4 font-extrabold text-white mb-2 duration-150 first:pl-0 last:pr-0 drop-shadow-[0px_0px_10px_#666666]"
        >
          Projects
        </h1>
        <p class="text-lg text-gray-400">
          "What we have to learn, we learn by doing." - Aristotle
        </p>
      </div>
      <slot />
      <Footer />
    </div>
  </div>
</Layout>
