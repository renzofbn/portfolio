---
const { url } = Astro.props;
---

<a
  class="-mt-8 flex items-center gap-2 text-red-400 font-base text-base"
  href={url}
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    class="w-6 h-6"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="lucide lucide-square-arrow-left"
    ><rect width="18" height="18" x="3" y="3" rx="2"></rect><path
      d="m12 8-4 4 4 4"></path><path d="M16 12H8"></path></svg
  >
  Return <span class="ml-1 w-full border-b border-primary"></span></a
>
