---
import Badge from "./badge.astro";

const { project } = Astro.props;
---

<div
  class="border border-neutral-700 rounded-lg p-4 w-full transition-colors duration-300"
>
  <div class="flex justify-between items-center">
    {
      project.live_url ? (
        <a
          href={project.live_url}
          class="group hidden items-center space-x-[4px] text-sm tracking-tight opacity-70 transition-opacity duration-100 hover:opacity-100 md:flex"
          target="_blank"
        >
          <h2 class="text-xl font-bold">{project.title}</h2>

          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-5 h-5"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-arrow-up-right"
          >
            <>
              <path d="M7 7h10v10" />
              <path d="M7 17 17 7" />
            </>
          </svg>
        </a>
      ) : (
        <h2 class="text-xl font-bold">{project.title}</h2>
      )
    }
    {
      project.gh_url && (
        <a
          href={project.gh_url}
          target="_blank"
          class="duration-150 first:pl-0 last:pr-0 hover:scale-110 hover:drop-shadow-[0px_0px_10px_#E05E58]"
          aria-label="View Renzo Valentin's GitHub"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-6 h-6"
            viewBox="0 0 24 24"
          >
            <path
              fill="currentColor"
              d="M12 2.247a10 10 0 0 0-3.162 19.487c.5.088.687-.212.687-.475c0-.237-.012-1.025-.012-1.862c-2.513.462-3.163-.613-3.363-1.175a3.64 3.64 0 0 0-1.025-1.413c-.35-.187-.85-.65-.013-.662a2 2 0 0 1 1.538 1.025a2.137 2.137 0 0 0 2.912.825a2.1 2.1 0 0 1 .638-1.338c-2.225-.25-4.55-1.112-4.55-4.937a3.9 3.9 0 0 1 1.025-2.688a3.6 3.6 0 0 1 .1-2.65s.837-.262 2.75 1.025a9.43 9.43 0 0 1 5 0c1.912-1.3 2.75-1.025 2.75-1.025a3.6 3.6 0 0 1 .1 2.65a3.87 3.87 0 0 1 1.025 2.688c0 3.837-2.338 4.687-4.562 4.937a2.37 2.37 0 0 1 .674 1.85c0 1.338-.012 2.413-.012 2.75c0 .263.187.575.687.475A10.005 10.005 0 0 0 12 2.247"
            />
          </svg>
        </a>
      )
    }
  </div>

  <p class="text-gray-200 font-light mt-2 mb-2">{project.description}</p>
  <div class="flex gap-2">
    {
      project.tools.map((tool: { name: string; value: string }) => (
        <Badge>
          <img
            src={`/assets/${tool.value}.svg`}
            alt={tool.name}
            class="w-5 h-5"
          />
          {tool.name}
        </Badge>
      ))
    }
  </div>
</div>

